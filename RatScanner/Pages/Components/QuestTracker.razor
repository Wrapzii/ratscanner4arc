@using RatScanner
@inject IJSRuntime JS

<div class="quest-tracker">
    <div class="tracker-header">
        <h3>Active Quests (@ActiveQuests.Count)</h3>
        <button @onclick="RefreshQuests" class="btn-refresh">ðŸ”„</button>
    </div>
    
    @if (ActiveQuests.Any())
    {
        <div class="quest-list">
            @foreach (var quest in ActiveQuests)
            {
                <div class="quest-item" @onclick="() => SelectQuest(quest)">
                    <div class="quest-name">@quest.GetName()</div>
                    <div class="quest-trader">@quest.Trader</div>
                    @if (quest.Objectives != null && quest.Objectives.Any())
                    {
                        <div class="quest-objectives">
                            @foreach (var objective in quest.GetObjectives())
                            {
                                <div class="objective">â€¢ @objective</div>
                            }
                        </div>
                    }
                    @if (quest.RewardItemIds != null && quest.RewardItemIds.Any())
                    {
                        <div class="quest-rewards">
                            <strong>Rewards:</strong>
                            @foreach (var reward in quest.RewardItemIds)
                            {
                                <span class="reward-item">@reward.QuantityÃ—@reward.ItemId</span>
                            }
                        </div>
                    }
                    <button @onclick="() => CompleteQuest(quest.Id)" @onclick:stopPropagation="true" 
                            class="btn-complete">âœ“ Complete</button>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-quests">
            <p>No active quests</p>
            <button @onclick="ShowQuestBrowser" class="btn-browse">Browse Quests</button>
        </div>
    }
    
    @if (ShowBrowser)
    {
        <div class="quest-browser-modal">
            <div class="modal-content">
                <h3>All Quests</h3>
                <button @onclick="() => ShowBrowser = false" class="btn-close">Ã—</button>
                
                <div class="quest-filter">
                    <select @onchange="FilterByTrader">
                        <option value="">All Traders</option>
                        <option value="Celeste">Celeste</option>
                        <option value="Lance">Lance</option>
                    </select>
                </div>
                
                <div class="all-quests-list">
                    @foreach (var quest in FilteredQuests)
                    {
                        bool isActive = PlayerStateManager.IsQuestActive(quest.Id);
                        bool isCompleted = PlayerStateManager.IsQuestCompleted(quest.Id);
                        
                        <div class="quest-browser-item @(isActive ? "active" : "") @(isCompleted ? "completed" : "")">
                            <div class="quest-info">
                                <strong>@quest.GetName()</strong>
                                <span class="trader-badge">@quest.Trader</span>
                                @if (isCompleted)
                                {
                                    <span class="status-badge completed">âœ“ Completed</span>
                                }
                                else if (isActive)
                                {
                                    <span class="status-badge active">âš¡ Active</span>
                                }
                            </div>
                            @if (!isActive && !isCompleted)
                            {
                                <button @onclick="() => ActivateQuest(quest.Id)" class="btn-activate">
                                    Activate
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<RaidTheoryDataSource.RaidTheoryQuest> ActiveQuests = new();
    private List<RaidTheoryDataSource.RaidTheoryQuest> AllQuests = new();
    private List<RaidTheoryDataSource.RaidTheoryQuest> FilteredQuests = new();
    private bool ShowBrowser = false;
    private string? SelectedTrader = null;

    protected override void OnInitialized()
    {
        RefreshQuests();
        LoadAllQuests();
    }

    private void RefreshQuests()
    {
        var state = PlayerStateManager.GetState();
        var allQuests = ArcRaidersData.GetQuests();
        
        ActiveQuests = allQuests
            .Where(q => state.ActiveQuests.Contains(q.Id))
            .ToList();
        
        StateHasChanged();
    }

    private void LoadAllQuests()
    {
        AllQuests = ArcRaidersData.GetQuests();
        FilteredQuests = AllQuests;
    }

    private void SelectQuest(RaidTheoryDataSource.RaidTheoryQuest quest)
    {
        Logger.LogInfo($"Selected quest: {quest.GetName()}");
    }

    private void CompleteQuest(string questId)
    {
        PlayerStateManager.CompleteQuest(questId);
        RefreshQuests();
        Logger.LogInfo($"Quest completed: {questId}");
    }

    private void ActivateQuest(string questId)
    {
        PlayerStateManager.AddActiveQuest(questId);
        RefreshQuests();
        ShowBrowser = false;
        Logger.LogInfo($"Quest activated: {questId}");
    }

    private void ShowQuestBrowser()
    {
        ShowBrowser = true;
    }

    private void FilterByTrader(ChangeEventArgs e)
    {
        SelectedTrader = e.Value?.ToString();
        
        if (string.IsNullOrEmpty(SelectedTrader))
        {
            FilteredQuests = AllQuests;
        }
        else
        {
            FilteredQuests = AllQuests
                .Where(q => q.Trader.Equals(SelectedTrader, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
        
        StateHasChanged();
    }
}

