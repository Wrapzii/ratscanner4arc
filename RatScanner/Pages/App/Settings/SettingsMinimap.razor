@page "/app/settings/minimap"
@inject SettingsVM SettingsVM
@inject IJSRuntime JSRuntime
@implements IDisposable

<div>
    <MudGrid Class="pa-0 ma-0" Spacing="0" Style="height: 100%;">
        <MudItem xs="12">
            <div class="d-flex align-center justify-center mx-2 mb-1">
                <MudText Typo="Typo.subtitle1" Color="Color.Inherit">Minimap Settings</MudText>
            </div>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Class="align-center justify-center pa-2 mx-2 mb-2" Elevation="2">
                <MudStack Spacing="1">
                    <MudText Typo="Typo.subtitle2">Nearby POI Radius</MudText>
                    <MudSlider @bind-Value="SettingsVM.MapNearbyLootRadius" Min="20" Max="200" Step="5" Color="Color.Info">
                        <MudText Typo="Typo.caption">Radius: @SettingsVM.MapNearbyLootRadius%</MudText>
                    </MudSlider>
                </MudStack>
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Class="align-center justify-center pa-2 mx-2 mb-2" Elevation="2">
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2">Show Categories</MudText>
                    <MudCheckBox @bind-Checked="SettingsVM.ShowMapContainers" Label="Containers" Dense="true" Size="Size.Small" Class="pa-0 ma-0"></MudCheckBox>
                    <MudCheckBox @bind-Checked="SettingsVM.ShowMapArc" Label="Arc Enemies" Dense="true" Size="Size.Small" Class="pa-0 ma-0"></MudCheckBox>
                    <MudCheckBox @bind-Checked="SettingsVM.ShowMapEvents" Label="Events" Dense="true" Size="Size.Small" Class="pa-0 ma-0"></MudCheckBox>
                    <MudCheckBox @bind-Checked="SettingsVM.ShowMapLocations" Label="Locations" Dense="true" Size="Size.Small" Class="pa-0 ma-0"></MudCheckBox>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
</div>

@code {
    protected override void OnInitialized()
    {
        SettingsVM.PropertyChanged += PropertyChangeHandler;
    }

    private async void PropertyChangeHandler(object? sender, EventArgs e)
    {
        await InvokeAsync(() => StateHasChanged());
    }

    public void Dispose()
    {
        SettingsVM.PropertyChanged -= PropertyChangeHandler;
    }
}
